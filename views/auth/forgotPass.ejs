<body class="min-h-screen bg-gray-400 ">
  <div class="w-full max-w-md px-8 pt-6 pb-8 mx-auto mt-10 mb-4 bg-white rounded shadow-md">
    <h2 class="mb-6 text-2xl font-bold text-center text-gray-700">Enter Valid Email</h2>
    
    <form action="/forgot"  method="POST">
      <!-- Add Home -->
      <%- include("../partials/errorMessage.ejs") %>
      
      <div class="mb-4">
        <label for="email" class="block mb-2 text-sm font-bold text-gray-700"> Email:</label>
        <input value="<%=typeof oldInput!=='undefined'? oldInput.email : '' %>" type="email" id="email" name="email" placeholder="Enter  email" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>
  
      <!-- Subit Button -->
      <div class="flex items-center justify-center">
        <button type="submit" class="px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline">
        Forgot Password
        </button>
      </div>
    </form>
  </div>
</body>
</html>
