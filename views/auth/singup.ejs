<%- include("../partials/header.ejs") %>

</head>
<%- include("../partials/nav.ejs") %>
<body class="min-h-screen bg-gray-400 ">
  <div class="w-full max-w-md px-8 pt-6 pb-8 mx-auto mt-10 mb-4 bg-white rounded shadow-md">
    <h2 class="mb-6 text-2xl font-bold text-center text-gray-700">Register</h2>
    
    <form action="/register"  method="POST">
      
        <%- include("../partials/errorMessage.ejs") %>
      
      <!-- Add Home -->
      <div class="mb-4">
        <label for="name" class="block mb-2 text-sm font-bold text-gray-700"> Name:</label>
        <input value="<%=typeof oldInput!=="undefined"? oldInput.name:"" %>" type="text" id="name" name="name" placeholder="Enter  name" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>
      
      <div class="mb-4">
        <label for="email" class="block mb-2 text-sm font-bold text-gray-700"> Email:</label>
        <input value="<%=typeof oldInput!=="undefined"? oldInput.email:"" %>" type="email" id="email" name="email" placeholder="Enter  email" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>

      <!-- Add Location -->
      <div class="mb-4">
        <label for="password" class="block mb-2 text-sm font-bold text-gray-700">password:</label>
        <input value="<%=typeof oldInput!=="undefined"? oldInput.password:"" %>" type="password" id="password" name="password" placeholder="Enter password" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>
      
      <div class="mb-4">
        <label for="cfpassword" class="block mb-2 text-sm font-bold text-gray-700">password:</label>
        <input value="<%=typeof oldInput!=="undefined"? oldInput.cfpassword:"" %>" type="password" id="cfpassword" name="cfpassword" placeholder="Enter confirm password" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>

      <div class="mb-4">
        <label for="type" class="block mb-2 text-sm font-bold text-gray-700">User Type:</label>
       <input 
        type="radio"
        name="userType"
        id="user"
        value="guest"
        <%=typeof oldInput!=="undefined" && oldInput.userType==="guest" ? 'checked':"" %> 
        />Guest

          
       <input
        type="radio"
        name="userType"
        id="host"
        value="host"
        <%=typeof oldInput!=="undefined" && oldInput.userType==="host" ? 'checked':"" %> 
          />Host
      </div>


      <!-- Submit Button -->
      <div class="flex items-center justify-center">
        <button type="submit" class="px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline">
        Register
        </button>
      </div>
    </form>
  </div>
</body>
</html>
