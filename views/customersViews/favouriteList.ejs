<%- include("../partials/header.ejs")%>
</head>
<%- include("../partials/nav.ejs")%>
<body>
  <h1 class="text-4xl text-center text-green-500">Welcome In Airbnb</h1>

  <div class="container p-6 mx-auto">
   <ul class="space-y-4">
     <!-- Home Card -->
      <% Favitems.forEach( (curHomeDt)=>{ %>
       <li class="flex flex-col overflow-hidden bg-white rounded-lg shadow-lg sm:flex-row">
         <img src="<%=curHomeDt.image %>" alt="Home Image" class="object-cover w-full h-48 sm:w-1/3 sm:h-auto">
         <div class="flex flex-col justify-between p-6">
           <div>
             <h2 class="text-xl font-semibold text-gray-800"><%= curHomeDt.home %></h2>
             <p class="mt-1 text-gray-600"><%= curHomeDt.location %></p>
           </div>
           <div class="flex items-center justify-between mt-4">
             <p class="text-lg font-bold text-green-600"><%= curHomeDt.price %></p>
             
             <div class="flex items-center space-x-4">
               <span class="mr-1 text-yellow-400">&#9733;</span>
               <span class="font-medium text-gray-700"><%= curHomeDt.rating %></span>
             </div>

             <form action="/customer/favourite/delete/<%=curHomeDt._id%>" method="post">
               <button>Remove Favourite</button>
             </form>

           </div>
         </div>
       </li>
     <%  }) %>
    
   </ul>
 </div>
</body>
</html>