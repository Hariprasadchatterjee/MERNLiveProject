<%- include("../partials/header.ejs")%>
</head>
<%- include("../partials/nav.ejs")%>


<body class="min-h-screen bg-gray-400 ">
  <div class="w-full max-w-md px-8 pt-6 pb-8 mx-auto mt-10 mb-4 bg-white rounded shadow-md">
    <h2 class="mb-6 text-2xl font-bold text-center text-gray-700"><%=editing?"Edit Home":"Add Home" %></h2>
    
    <form enctype="multipart/form-data" action="<%=editing?"/host/home/edit" :"/host/add-edit-Home" %> " method="POST">
      <!-- Add Home -->
      <div class="mb-4">
        <label for="addHome" class="block mb-2 text-sm font-bold text-gray-700">Home Name:</label>
        <input value="<%=editing?homeData.home:"" %>"  type="text" id="addHome" name="home" placeholder="Enter home name" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>

      <!-- Add Location -->
      <div class="mb-4">
        <label for="addLocation" class="block mb-2 text-sm font-bold text-gray-700">Location:</label>
        <input value="<%=editing?homeData.location:"" %>" type="text" id="addLocation" name="location" placeholder="Enter location" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>

      <!-- Add Price -->
      <div class="mb-4">
        <label for="addPrice" class="block mb-2 text-sm font-bold text-gray-700">Price:</label>
        <input value="<%=editing?homeData.price:"" %>" type="number" id="addPrice" name="price" placeholder="Enter price" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>

      <!-- Add Rating -->
      <div class="mb-4">
        <label for="addRating" class="block mb-2 text-sm font-bold text-gray-700">Rating:</label>
        <input value="<%=editing?homeData.rating:"" %>" type="number" id="addRating" name="rating" placeholder="Enter rating (1-5)" min="1" max="5" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
      </div>

      <!-- Add Image -->
      <div class="mb-6">
        <% if(editing){ %>
          <img src= "<%=homeData.image %>" alt="Home Image" class="object-cover w-full h-48 sm:w-1/3 sm:h-auto">
          <% }%>
        
        <label for="addImage" class="block mb-2 text-sm font-bold text-gray-700">Image:</label>
        <input  type="file" id="addImage" name="image" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" >
      </div>
      <!-- Add rules -->
      <!-- <div class="mb-6">
        
        <label for="rules" class="block mb-2 text-sm font-bold text-gray-700">Rules:</label>
        <input  type="file" id="rules" name="rules" class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" >
      </div> -->
      
      <input type="hidden" name="homeid" value="<%=editing?homeData._id:"" %>">
      <!-- Submit Button -->
      <div class="flex items-center justify-center">
        <button type="submit" class="px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline">
          <%=editing?"Update":"Add" %>
        </button>
      </div>
    </form>
  </div>
</body>

</html>